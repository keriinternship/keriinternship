<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueMo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_find_plane"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lnDenDi"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_below="@id/btngGroup"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:baselineAligned="false"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <!-- Điểm đi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="@dimen/margin_find_plane"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="232dp"
                android:layout_height="wrap_content"

                tools:ignore="UseCompoundDrawables">


                <TextView
                    android:id="@+id/lblDiemDi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblDiemDi" />

                <ImageView
                    android:id="@+id/imgvDiemDi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginLeft"
                    android:contentDescription="@string/lblDiemDi"
                    app:srcCompat="@drawable/ic_baseline_flight_takeoff_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMaDiemDi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="_ _ _"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTenDiemDi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <!-- Swap -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgvSwap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:contentDescription="@string/swap"
                app:srcCompat="@drawable/ic_baseline_swap_horizontal_circle_24" />
        </LinearLayout>
        <!-- Điểm đến -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="@dimen/margin_find_plane"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                tools:ignore="RtlHardcoded,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imgvDiemDen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/marginLeft"
                    android:contentDescription="@string/lblDiemDen"
                    app:srcCompat="@drawable/ic_baseline_flight_land_24"/>

                <TextView
                    android:id="@+id/lblDiemDen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblDiemDen"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMaDiemDen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="_ _ _"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTenDiemDen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="_ _ _"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnNgayDiVe"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnDenDi"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_end"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblNgayDi"
                android:layout_margin="@dimen/margin_find_plane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblNgayDi" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgvCalendar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/chooseNgayDi"
                    app:srcCompat="@drawable/ic_baseline_calendar_today_24" />

                <EditText
                    android:id="@+id/edtNgayDi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="dd/mm/yyyy"
                    android:hint="dd/mm/yyyy"
                    android:inputType="date"
                    android:labelFor="@id/edtNgayDi" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_end"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblNgayDen"
                android:layout_margin="@dimen/margin_find_plane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblNgayDen" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgvCalendar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/chooseNgayDi"
                    app:srcCompat="@drawable/ic_baseline_calendar_today_24" />

                <EditText
                    android:id="@+id/edtNgayDen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="dd/mm/yyyy"
                    android:hint="dd/mm/yyyy"
                    android:inputType="date"
                    android:labelFor="@id/edtNgayDen" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnHanhKhach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorWhite"
        android:layout_below="@id/lnNgayDiVe"
        android:layout_marginTop="@dimen/margin_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_find_plane"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblHK" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_end"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_find_plane"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblNguoiLon" />
                <EditText
                    android:id="@+id/edtNguoiLon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:text="@string/defaultNguoiLon"
                    tools:ignore="LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_end"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_find_plane"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblTreEm" />
                <EditText
                    android:id="@+id/edtTreEm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:text="@string/defaultTreEm"
                    tools:ignore="LabelFor" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFindPlanes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnHanhKhach"
        android:layout_marginTop="@dimen/margin_bottom"
        android:text="@string/btnFindPlanes"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/labelFindPlane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/margin_find_plane"
        android:layout_marginTop="@dimen/margin_find_plane"
        android:layout_marginEnd="@dimen/margin_find_plane"
        android:layout_marginBottom="@dimen/margin_find_plane"
        android:text="@string/find_plane_label"
        android:textSize="18sp" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/btngGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelFindPlane"
        android:orientation="horizontal"
        android:weightSum="2"
        app:checkedButton="@id/btnKhuHoi"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKhuHoi"
            android:layout_width="0dp"
            android:textColor="@color/colorBlack"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/khuhoi"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMotChieu"
            android:layout_width="0dp"
            android:textColor="@color/colorBlack"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/motchieu"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>
    </RelativeLayout>
</RelativeLayout>
