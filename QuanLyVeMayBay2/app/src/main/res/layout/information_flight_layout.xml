<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGraymo"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_chieudi_chieuve"
                    android:text="@string/lblChieudi" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_diemdi"
                        style="@style/tv_diadiem"
                        android:layout_marginRight="@dimen/layout_marginRight"
                        android:text="@string/tv_Noichon" />

                    <ImageView
                        android:id="@+id/imgvDiemDi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/lblDiemDi"
                        app:srcCompat="@drawable/ic_baseline_flight_takeoff_24" />

                    <TextView
                        style="@style/tv_diadiem"
                        android:layout_marginStart="@dimen/layout_marginStart"
                        android:text="@string/tv_Noichon1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/tv_time"
                    android:text="@string/lblDate" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Chieudi"
                    style="@style/tv_money"
                    android:text="@string/tv_money" />

                <Button
                    android:id="@+id/btn_Chuyendikhac"
                    style="@style/btn_chuyenkhac"
                    android:text="@string/tv_chonchuyenkhac" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@color/colorGraymo"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/tv_Timekh"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/tv_time"
                        android:textColor="@color/colorOrange"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/tv_Datekh"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/tv_Date"
                        android:textColor="@color/colorOrange"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center|right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_Timedk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_time"
                        android:textColor="@color/colorOrange"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_Datedk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_Date"
                        android:textColor="@color/colorOrange"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="2"
                android:background="@color/colorGraymo"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_Diemxp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/tv_Diemxp"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/tv_textSize1" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_Diemkt"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_Diemkt"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/tv_textSize1" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@color/colorGraymo"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/logo_jetstar" />


                <TextView
                    android:id="@+id/tvmaVe"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center|top"
                    android:text="@string/tv_Mave"
                    android:textColor="@color/colorOrange"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_chieudi_chieuve"
                    android:text="@string/lblChieuve" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_Diemden"
                        style="@style/tv_diadiem"
                        android:text="@string/tv_Noichon1" />

                    <ImageView
                        android:id="@+id/imgDiemDen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marginLeft"
                        android:contentDescription="@string/lblDiemDi"
                        app:srcCompat="@drawable/ic_baseline_flight_takeoff_24" />

                    <TextView
                        style="@style/tv_diadiem"
                        android:layout_marginStart="@dimen/layout_marginStart"
                        android:text="@string/tv_Noichon" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_dateDen"
                    style="@style/tv_time"
                    android:text="@string/lblDate" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/layout_marginRight"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_chieuVe"
                    style="@style/tv_money"
                    android:text="@string/tv_money" />

                <Button
                    android:id="@+id/btn_Chuyenvekhac"
                    style="@style/btn_chuyenkhac"
                    android:text="@string/tv_chonchuyenkhac" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin"
            android:layout_weight="2"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_timeVe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_time"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/tv_textSize" />

                <TextView
                    android:id="@+id/tv_dateVe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_Date"
                    android:textColor="@color/colorOrange"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_weight="2"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Diadiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_Diemkt"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:gravity="left|center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/logo_vietjet" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_maVeve"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|top"
                        android:text="@string/tv_Mave"
                        android:textColor="@color/colorOrange"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin"
                android:gravity="left|center"
                android:text="@string/tv_Thongtingiave"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/tv_textSize1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin"
            android:layout_weight="5"

            android:background="@color/colorWhite"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ln_money_result"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:layout_marginRight="@dimen/layout_marginRight_result"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_titel_result"
                    android:text="@string/tv_Giave" />

                <TextView
                    android:id="@+id/tv_Giave"
                    style="@style/tv_money_result"
                    android:text="@string/tv_MoneyGiave" />
            </LinearLayout>

            <LinearLayout
                style="@style/ln_money_result"
                android:layout_marginRight="@dimen/layout_marginRight_result"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_titel_result"
                    android:text="@string/tv_Thue" />

                <TextView
                    android:id="@+id/tv_Thue"

                    style="@style/tv_money_result"
                    android:text="@string/tv_MoneyThue" />
            </LinearLayout>

            <LinearLayout
                style="@style/ln_money_result"
                android:layout_marginRight="@dimen/layout_marginRight_result"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_titel_result"
                    android:text="@string/tv_Tong" />

                <TextView
                    android:id="@+id/tv_Tong"
                    style="@style/tv_money_result"
                    android:text="@string/tv_MoneyTong" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/tv_Luuy"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTieptuc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/btnTieptuc" />
        </LinearLayout>


</LinearLayout>