<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_maVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="@string/ma"
            android:textSize="@dimen/tv_textSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="right|top">

        <TextView
            android:id="@+id/tv_giaTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:text="@string/money"
            android:textColor="@color/colorOrange"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_maDi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:text="@string/maTpdi" />

        <TextView
            android:id="@+id/tv_gioXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:text="@string/gioXuatphat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:text="@string/daugach" />

        <TextView
            android:id="@+id/tv_maDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:text="@string/maTpDen" />

        <TextView
            android:id="@+id/tv_gioDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:text="@string/gioDen" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:orientation="horizontal">

            <Button
                android:id="@+id/btnXem"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/colorGrayDam"
                android:text="@string/btnChiTiet" />
            <Button
                android:id="@+id/btnChon"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/colorOrange"
                android:text="@string/chon"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
</LinearLayout>